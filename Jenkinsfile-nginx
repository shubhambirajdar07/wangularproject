pipeline {
  agent any
  stages {
    stage('Clone Repo') {
      steps {
        // Use SSH credentials if needed, or HTTPS if public repo
        git url: 'https://github.com/shubhambirajdar07/wangularproject.git'
      }
    }
    stage('Build Docker Image') {
      steps {
        sh 'docker build -t angular-app .'
      }
    }
    stage('Run Docker Container') {
      steps {
        // Remove existing container if exists
        sh 'docker rm -f angular-app || true'
        sh 'docker run -d -p 8080:80 --name angular-app angular-app'
      }
    }
  }
}
