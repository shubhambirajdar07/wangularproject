pipeline {
  agent any
  stages {
    stage('Clone Repo') {
      steps {
        git branch: 'main', url: 'https://github.com/shubhambirajdar07/wangularproject.git'
      }
    }
    stage('Build Docker Image') {
      steps {
        script {
          dockerImage = docker.build('angular-app:latest')
        }
      }
    }
    stage('Run Docker Container') {
      steps {
        script {
          sh 'docker rm -f angular-app || true'
          sh 'docker run -d -p 8080:80 --name angular-app angular-app:latest'
        }
      }
    }
    stage('Show Access URL') {
      steps {
        script {
          def serverIP = sh(script: "curl -s http://checkip.amazonaws.com", returnStdout: true).trim()
          echo "Application deployed at: http://${serverIP}:8080"
        }
      }
    }
  }
}
